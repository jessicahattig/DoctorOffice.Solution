@{
  Layout = "_Layout";
}

@using DoctorOffice.Models;

<h1>Doctors</h1>

@if (@Model.Count == 0)
{
  <h3>No doctors have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Doctor doctor in Model)
    {
      <li>@Html.ActionLink($"{doctor.DoctorName}", "Details", new { id = doctor.DoctorId }) | @doctor.DoctorName</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add new doctor", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
<p>@Html.ActionLink("Add new tag", "Create")</p>